<%- include('../include/head.ejs')%>
</head>
<body style="overflow: hidden;">
    <%- include('../include/header.ejs')%>            
    <%- include('../include/sideBar.ejs')%>
    <div id="page-content-wrapper">
        <div id="page-title">
            <h3>
                Users Reservation:             
            </h3>                       
        </div>
        <div id="page-content">
            <div class="example-box">
                <div class="example-code">            
                    <div class="row">  
                        <% for(r of userReserve){
                            %>
                            <div class="col-md-4">            
                                <div class="profile-box content-box">
                                    <div class="content-box-header clearfix bg-orange">
                                        <div class="user-details" style="margin-left: 90;">
                                            <h5>Patient Name: <%= r.patientName%></h5>
                                            <span>Patient Email: <%= r.patientEmail%></span>
                                            <span>Patient Phone: <%= r.patientPhone%></span>
                                        </div>
                                    </div>
                                    <div class="nav-list" style="padding-left: 30px;">    
                                        <%for(doc of doctor){
                                            if(r.doctorId == doc.id){
                                                %>
                                        <h5>Doctor Name: <%= doc.name%> <%= doc.lname%></h5> <p style="margin-bottom: 20px;"></p>
                                            
                                                <%
                                            }
                                        }
                                        %> 
                                        <% for(dep of department){
                                            if(r.departmentId == dep.id){
                                                %>
                                               <h5> Department: <%= dep.dp%></h5>
                                                <%
                                            }
                                        } %> <br>     
                                            <%
                                            const date = new Date(r.date)
                                            const day = date.getDate().toString().padStart(2, '0')
                                            const month = date.getMonth().toString().padStart(2,'0')   
                                            const year = date.getFullYear()  
                                            const hour = date.getHours().toString().padStart(2,'0') 
                                            let period = ''
                                            if(hour >= 12){
                                                period = "PM"
                                            }
                                            else{
                                                period = "AM"}%>
                                            Date Reserved: <%= day%>/<%= month%>/<%= year%> 
                                            Hour: <%= hour%> <%= period%>
                                    </div>
                                    <br>
                                    <div class="mt-3" style="margin-bottom: 20px;">
                                        <form action="/deleteUserReserve" method="POST">
                                            <input type="hidden" value="<%= r.id%>" name="reserveId">
                                            <div class="text-center"><button type="submit">Delete Reserve</button></div>
                                        </form>
                                    </div>
                                </div>                
                            </div>
                            <%
                        } %>                  
                           
                    </div>
            
            
                </div>
                
            </div>


<%- include('../include/end.ejs')%>
<%- include('../include/head.ejs')%>
</head>
<body style="overflow: hidden;">
    <%- include('../include/header.ejs')%>            
    <%- include('../include/sideBar.ejs')%>
    <div id="page-content-wrapper">
        <div id="page-title">
            <h3>
                List of User Comments
                
            </h3>                       
        </div>
        <div id="page-content">
            <div class="example-box">
                <div class="example-code">            
                    <div class="row">
                    <% for(com of comment){
                        %>
                        <div class="col-md-4">
            
                            <div class="profile-box content-box">
                                <div class="content-box-header clearfix bg-green">
                                    <i class="glyph-icon icon-user" style="width: 30px; height: 30px; padding-top: 13px; margin-right: 10px; background-color: white; color: black; padding-left: 20px; border-radius: 50px;"></i> 
                                    <div class="user-details" style="margin-left: 90;">
                                        <%= com.name%>
                                        <span><%= com.email%></span>
                                    </div>
                                </div>
                                <div class="nav-list" style="padding-left: 30px;">
                                    <h4>
                                    Subject:  <%= com.subject%>
                                    </h4>
                                       
                                    <h5>Message:</h5> <p style="margin-bottom: 20px;"><%= com.message%></p>
                                </div>
                                <div class="mt-3" style="margin-bottom: 20px;">
                                    <form action="/deleteComment" method="POST">
                                        <input type="hidden" value="<%= com._id%>" name="comId">
                                        <div class="text-center"><button type="submit">Delete Comment</button></div>
                                    </form>
                                </div>
                            </div>
            
                        </div>
                        <%
                    } %>
                        
                        
                    </div>
            
            
                </div>
                
            </div>


<%- include('../include/end.ejs')%>